package courseEndProject;

import java.io.File;

import org.hamcrest.Matchers;
import org.testng.annotations.Test;

import io.restassured.RestAssured;
import io.restassured.http.ContentType;

public class Assignment002 {
	

	@Test(priority='1')
	public void assignment002Put()
	{
		File file = new File("resources/dataput.json");
	long id = RestAssured.given()
		.baseUri("https://petstore.swagger.io/v2/pet/")
		.contentType(ContentType.JSON)
		.body(file)
		.when()
		.post()
		.then()
		.statusCode(200)
		.log().all()
		.body("status", Matchers.equalTo("available_qa")).extract().path("id");
	
	System.out.println(id);
		
		
	}
	

	@Test(priority='2')
	public void assignment002login()
	{
		RestAssured.given()
		.baseUri("https://petstore.swagger.io/v2/user/login")
		.auth().preemptive().basic("Uname001", "@tt!tude")
		.when()
		.get()
		.then()
		.statusCode(200)
		.log().all()
		.body("message", Matchers.contains("logged in user session"));
	
		
		
	}

}
